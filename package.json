{
  "name": "steriley",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --modern --report && yarn run build:functions",
    "build:functions": "netlify-lambda build src/lambda",
    "lint": "vue-cli-service lint",
    "test:watch": "vue-cli-service test:unit --watch",
    "test:unit": "vue-cli-service test:unit",
    "start": "node app/index.js",
    "start:dev": "nodemon -r dotenv/config app/index.js",
    "start:app": "npm-run-all --parallel start:dev serve start:server",
    "start:server": "netlify-lambda serve src/lambda"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "@sentry/browser": "^5.9.1",
    "@sentry/integrations": "^5.8.0",
    "apicache": "^1.5.2",
    "body-parser": "^1.19.0",
    "core-js": "^3.4.3",
    "date-fns": "^2.8.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "instagram-node": "^0.5.8",
    "node-fetch": "^2.6.0",
    "twitter": "^1.7.1",
    "vue": "^2.6.10",
    "vue-lazyload": "^1.3.3"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.1.0",
    "@vue/cli-plugin-eslint": "^4.1.0",
    "@vue/cli-plugin-unit-jest": "^4.1.0",
    "@vue/cli-service": "^4.1.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "1.0.0-beta.30",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^6.0.1",
    "netlify-lambda": "^1.6.3",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "sass": "^1.23.7",
    "sass-loader": "^8.0.0",
    "vue-template-compiler": "^2.6.10"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "plugin:vue/recommended",
      "plugin:vue/strongly-recommended",
      "@vue/prettier"
    ],
    "rules": {
      "vue/max-attributes-per-line": 0,
      "vue/require-prop-types": 0
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest"
  }
}
