---
import ContactForm from '../components/ContactForm/ContactForm.astro';
import SectionHeader from '../components/SectionHeader.astro';
import IntroductionSection from '../components/IntroductionSection.astro';
import LastFm from '../components/LastFm.vue';
import PageWrapper from '../PageWrapper.astro';
import PageHeader from '../components/PageHeader.astro';

import Analytics from '@vercel/analytics/astro';
import AboutMe from '../components/AboutMe.astro';
import Experience from '../components/Experience.astro';
import WebExperiments from '../components/WebExperiments.astro';
import PageFooter from '../components/PageFooter.astro';
---

<PageWrapper>
  <div class="relative flex h-auto min-h-screen w-full flex-col">
    <PageHeader />

    <main class="flex h-full grow flex-col">
      <div class="mx-auto w-full max-w-5xl px-6 md:px-10">
        <section
          class="flex min-h-[calc(100vh-80px)] flex-col justify-center py-20"
          id="home"
        >
          <div class="flex flex-col gap-6">
            <IntroductionSection />
          </div>
        </section>
        <section class="py-20" id="about">
          <SectionHeader number="01" title="About Me" />
          <AboutMe />
        </section>
        <section class="py-20" id="experience">
          <SectionHeader number="02" title="Experience" />
          <Experience />
        </section>
        <section class="py-20" id="portfolio">
          <SectionHeader number="03" title="Web Experiments" />
          <WebExperiments />
        </section>
        <section class="py-20" id="lastfm">
          <SectionHeader number="04" title="Recently Played" />
          <LastFm client:load />
        </section>
        <section class="py-20 text-center" id="contact">
          <ContactForm />
        </section>
      </div>
    </main>

    <PageFooter />
    <Analytics />
  </div>
</PageWrapper>
